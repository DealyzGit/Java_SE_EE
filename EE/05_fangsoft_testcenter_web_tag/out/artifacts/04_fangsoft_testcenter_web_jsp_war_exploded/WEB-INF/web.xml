<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <listener>
        <listener-class>org.fangsoft.testcenter.web.TestTimeoutGuard</listener-class>
    </listener>

    <welcome-file-list>
        <welcome-file>welcomeView.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>allTest</servlet-name>
        <jsp-file>/WEB-INF/allTest.jspf</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>allTest</servlet-name>
        <url-pattern>/WEB-INF/allTest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/WEB-INF/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loginView</servlet-name>
        <jsp-file>/loginView.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginView</servlet-name>
        <url-pattern>/loginView</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <jsp-file>/WEB-INF/logout.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>startTest</servlet-name>
        <jsp-file>/WEB-INF/startTest.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>startTest</servlet-name>
        <url-pattern>/startTest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>testCenterView</servlet-name>
        <jsp-file>/WEB-INF/testcenter.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>testCenterView</servlet-name>
        <url-pattern>/testCenterView</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>testDetailView</servlet-name>
        <jsp-file>/WEB-INF/testDetailView.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>testDetailView</servlet-name>
        <url-pattern>/testDetailView</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>paymentView</servlet-name>
        <jsp-file>/WEB-INF/paymentView.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>paymentView</servlet-name>
        <url-pattern>/paymentView</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>pay</servlet-name>
        <jsp-file>/WEB-INF/paymentReportView.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>pay</servlet-name>
        <url-pattern>/pay</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>testResultView</servlet-name>
        <jsp-file>/WEB-INF/testResultView.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>testResultView</servlet-name>
        <url-pattern>/testResultView</url-pattern>
    </servlet-mapping>

<!--    commitTest-->

    <servlet>
        <servlet-name>commitTest</servlet-name>
        <jsp-file>/WEB-INF/commitTest.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>commitTest</servlet-name>
        <url-pattern>/commitTest</url-pattern>
    </servlet-mapping>


    <jsp-config>
        <taglib>
            <taglib-uri>myjstl</taglib-uri>
            <taglib-location>/WEB-INF/tld/testCenter.tld</taglib-location>
        </taglib>
    </jsp-config>
</web-app>