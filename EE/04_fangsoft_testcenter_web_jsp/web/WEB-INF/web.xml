<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <listener>
        <listener-class>org.fangsoft.testcenter.web.TestTimeoutGuard</listener-class>
    </listener>


    <welcome-file-list>
        <welcome-file>welcomeView.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>allTest</servlet-name>
        <jsp-file>/WEB-INF/allTest.jspf</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>allTest</servlet-name>
        <url-pattern>/allTest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/WEB-INF/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <jsp-file>/WEB-INF/ logout.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>testCenterView</servlet-name>
        <jsp-file>/WEB-INF/testCenterView.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>testCenterView</servlet-name>
        <url-pattern>/testCenterView</url-pattern>
    </servlet-mapping>

</web-app>