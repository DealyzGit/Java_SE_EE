<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>DisplayWelcomeViewServlet</servlet-name>
        <servlet-class>org.fangsoft.testcenter.web.servlet.DisplayWelcomeViewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayWelcomeViewServlet</servlet-name>
        <url-pattern>/welcomeView</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>welcomeView.jsp</welcome-file>
    </welcome-file-list>


    <listener>
        <listener-class>org.fangsoft.testcenter.web.TestTimeoutGuard</listener-class>
    </listener>

    <servlet>
        <servlet-name>allTest</servlet-name>
        <jsp-file>allTest.jspf</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>allTest</servlet-name>
        <url-pattern>/allTest</url-pattern>
    </servlet-mapping>


</web-app>